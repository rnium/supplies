<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="supplies.dashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <div class="container">
                <div class="row my-3">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col m-0 p-0">
                                <div class="border m-2 px-4 py-2 bg-white rounded shadow-sm">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <h2 class="text-primary fw-bold m-0">Supplier Stats</h2>
                                        <div class="d-flex align-items-center">
                                            <select class="form-select me-1">
                                                <option value="0">Select Supplier</option>
                                                <t t-foreach="state.suppliers" t-as="supplier" t-key="supplier.id">
                                                    <option t-att-value="supplier.id" t-att-selected="supplier.id === state.selectedSupplierId ? 'selected' : ''" t-esc="supplier.name"/>
                                                </t>
                                            </select>
                                            <select class="form-select">
                                                <option value="0">Select Period</option>
                                                <option value="7">This Week</option>
                                                <option value="30">Last Week</option>
                                                <option value="90">Last Month</option>
                                                <option value="365">Last Year</option>
                                            </select>
                                            
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <StatCard title="'Accepted RFQs'" value="state.rfp.accepted"/>
                            <StatCard title="'Participation'" value="state.rfp.submitted"/>
                            <StatCard title="'Total Amount'" value="state.rfp.total_amount"/>
                        </div>
                    </div>
                    <div class="col-md-5">
                    </div>
                </div>
            </div>                    
        </div>
    </t>
</templates>