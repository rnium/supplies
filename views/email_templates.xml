<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="email_template_model_bjit_supplies_registration_otp" model="mail.template">
        <field name="name">BJIT Supplier Registration OTP</field>
        <field name="model_id" ref="model_bjit_supplies_registration_otp"/>
        <field name="subject">Your OTP</field>
        <field name="email_from">saiful.islam@bjitacademy.com</field>
        <field name="email_to">{{object.email}}</field>
        <field name="body_html" type="html">
            <h3>Dear User</h3>
            <p>
                Thank you for registering with us. Your OTP is <strong t-field="object.otp" />.
            </p>
            <p>Regards</p>
            <p>BJIT Limited</p>
        </field>
    </record>
</odoo>