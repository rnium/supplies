<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_supplies_rfp_tree" model="ir.ui.view">
        <field name="name">supplies.rfp.tree</field>
        <field name="model">supplies.rfp</field>
        <field name="arch" type="xml">
            <tree string="Request for Purchases">
                <field name="rfp_number" string="Reference"/>
                <field name="create_uid" string="Requested By"/>
                <field name="required_date" />
                <field
                    name="state"
                    widget="badge"
                    decoration-warning="state in ('draft', 'closed')"
                    decoration-danger="state in ('rejected',)"
                    decoration-info="state in ('submitted', 'approved')"
                    decoration-primary="state in ('recommendation',)"
                    decoration-success="state in ('approved',)"
                />
            </tree>
        </field>
    </record>

    <record id="view_supplies_rfp_form" model="ir.ui.view">
        <field name="name">supplies.rfp.form</field>
        <field name="model">supplies.rfp</field>
        <field name="arch" type="xml">
            <form string="Request for Purchase">
                <header>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,closed,recommendation,approved"/>
                    <button
                        name="action_submit"
                        string="Submit"
                        class="oe_highlight"
                        type="object"
                        icon="fa-paper-plane"
                        groups="supplies.group_supplies_reviewer"
                        invisible="state != 'draft'"
                    />
                    <button
                        name="action_return_to_draft"
                        string="Return to Draft"
                        type="object"
                        icon="fa-undo"
                        groups="supplies.group_supplies_reviewer"
                        invisible="state != 'submitted'"
                    />
                    <button
                        name="action_recommendation"
                        string="Recommend"
                        type="object"
                        class="btn-primary"
                        icon="fa-paper-plane-o"
                        groups="supplies.group_supplies_reviewer"
                        invisible="state != 'closed'"
                    />
                    <button
                        name="action_approve"
                        string="Approve"
                        class="oe_highlight"
                        type="object"
                        icon="fa-check"
                        groups="supplies.group_supplies_approver"
                        invisible="state != 'submitted'"
                    />
                    <button
                        name="action_reject"
                        string="Reject"
                        class="btn-warning"
                        type="object"
                        icon="fa-close"
                        groups="supplies.group_supplies_approver"
                        invisible="state != 'submitted'"
                    />
                    <button
                        name="action_close"
                        string="Close This RFP"
                        type="object"
                        class="btn-primary"
                        groups="supplies.group_supplies_approver"
                        invisible="state != 'approved'"
                    />

                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="rfp_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="create_uid" string="Requested By"/>
                            <field name="submitted_date" invisible="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="required_date" readonly="state != 'draft'"/>
                            <field
                                name="approved_supplier_id"
                                context="{'search_default_supplier': 1}"
                                options="{'no_open': True}"
                                groups="supplies.group_supplies_approver"
                                invisible="not id or state != 'approved'"
                            />
                        </group>
                    </group>

                    <notebook>
                        <page string="Product Lines">
                            <field
                                name="product_line_ids"
                                context="{'default_rfp_id': id}"
                                readonly="state != 'draft'"
                            >
                                <tree editable="bottom">
                                    <field name="product_id" string="Product"/>
                                    <field name="description" string="Description"/>
                                    <field name="product_qty" string="Quantity"/>
                                    <field name="uom_id" string="UoM"/>
                                </tree>
                            </field>
                        </page>

                        <page string="RFQs">
                            <field name="rfq_ids"
                                   context="{'default_rfp_id': id, 'create': False}">
                                <tree>
                                    <field name="partner_id" string="Vendor"/>
                                    <field name="date_order" string="Order Date"/>
                                    <field name="amount_total" string="Total"/>
                                    <field name="state" string="Status"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="supplies_rfp_action" model="ir.actions.act_window">
        <field name="name">Request For Purchases</field>
        <field name="res_model">supplies.rfp</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Request for Purchases
              </p>
        </field>
    </record>
</odoo>