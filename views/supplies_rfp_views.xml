<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_supplies_rfp_tree" model="ir.ui.view">
        <field name="name">supplies.rfp.tree</field>
        <field name="model">supplies.rfp</field>
        <field name="arch" type="xml">
            <tree string="Request for Purchases">
                <field name="rfp_number" string="Reference"/>
                <field name="create_uid" string="Requested By"/>
                <field name="required_date" />
                <field
                    name="state"
                    widget="badge"
                    decoration-warning="state in ('draft', 'closed')"
                    decoration-danger="state in ('rejected',)"
                    decoration-info="state in ('submitted', 'approved')"
                    decoration-primary="state in ('recommendation',)"
                    decoration-success="state in ('approved',)"
                />
            </tree>
        </field>
    </record>

    <record id="view_supplies_rfp_form" model="ir.ui.view">
        <field name="name">supplies.rfp.form</field>
        <field name="model">supplies.rfp</field>
        <field name="arch" type="xml">
            <form string="Request for Purchase">
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        statusbar_visible="draft,submitted,approved,closed,recommendation,accepted"
                        invisible="state == 'rejected'"
                    />
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted" invisible="state != 'rejected'"/>
                    <button
                        name="action_submit"
                        string="Submit"
                        class="oe_highlight"
                        type="object"
                        icon="fa-paper-plane"
                        groups="supplies.group_supplies_reviewer"
                        invisible="state != 'draft'"
                    />
                    <button
                        name="action_return_to_draft"
                        string="Return to Draft"
                        type="object"
                        icon="fa-undo"
                        groups="supplies.group_supplies_reviewer"
                        invisible="state != 'submitted'"
                    />
                    <button
                        name="action_recommendation"
                        string="Recommend"
                        type="object"
                        class="btn-primary"
                        icon="fa-paper-plane-o"
                        groups="supplies.group_supplies_reviewer"
                        invisible="state != 'closed'"
                    />
                    <button
                        name="action_approve"
                        string="Approve"
                        class="oe_highlight"
                        type="object"
                        icon="fa-check"
                        groups="supplies.group_supplies_approver"
                        invisible="state != 'submitted'"
                    />
                    <button
                        name="action_reject"
                        string="Reject"
                        class="btn-warning"
                        type="object"
                        icon="fa-close"
                        groups="supplies.group_supplies_approver"
                        invisible="state != 'submitted'"
                    />
                    <button
                        name="action_close"
                        string="Close This RFP"
                        type="object"
                        class="btn-primary"
                        groups="supplies.group_supplies_approver"
                        invisible="state != 'approved'"
                    />

                </header>
                <sheet>
                    <field name="state" invisible="1"/>
                    <widget name="web_ribbon" title="Rejected" bg_color="text-bg-danger" invisible="state != 'rejected'"/>
                    <widget name="web_ribbon" title="Accepted" bg_color="text-bg-success" invisible="state != 'accepted'"/>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_purchase_order" class="oe_stat_button" icon="fa-cube" invisible="state != 'accepted'">View Purchase Order</button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="rfp_number" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="create_uid" string="Requested By" invisible="not id or state != 'draft'"/>
                            <field name="submitted_date" invisible="not id or state == 'draft'"/>
                        </group>
                        <group>
                            <field name="required_date" readonly="state != 'draft'"/>
                            <field
                                name="approved_supplier_id"
                                context="{'search_default_supplier': 1}"
                                options="{'no_open': True}"
                                groups="supplies.group_supplies_approver"
                                invisible="not id or state != 'accepted'"
                                readonly="1"
                            />
                            <field name="total_amount" invisible="not id or state != 'accepted'" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Product Lines">
                            <field
                                name="product_line_ids"
                                context="{'default_rfp_id': id}"
                                readonly="state != 'draft'"
                            >
                                <tree editable="bottom">
                                    <field name="product_id" string="Product"/>
                                    <field name="description" string="Description"/>
                                    <field name="product_qty" string="Quantity"/>
                                    <field name="product_uom" string="UoM"/>
                                </tree>
                            </field>
                        </page>

                        <page string="RFQs">
                            <field
                                name="rfq_ids"
                                context="{'default_rfp_id': id, 'create': False}"
                                options="{'create': 0, 'delete': 0}"
                                readonly="state in ('recommendation', 'accepted')"
                            >
                                <tree default_order="score desc">
                                    <field name="company_id" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="name" string="Reference"/>
                                    <field name="partner_id" string="Supplier"/>
                                    <field name="create_date" string="Posted On"/>
                                    <field name="date_planned" string="Delivery Date"/>
                                    <field name="warrenty_period" string="Warrenty Period (Month)"/>
                                    <field name="amount_total" string="Total"/>
                                    <field name="score"/>
                                    <field name="recommended"/>
                                </tree>
                                <form string="RFQ">
                                    <header>
                                        <field name="rfp_state" invisible="1"/>
                                        <button
                                            name="action_accept"
                                            string="Accept"
                                            type="object"
                                            class="btn-primary"
                                            groups="supplies.group_supplies_approver"
                                            invisible="rfp_state != 'recommendation'"
                                        />
                                    </header>
                                    <group>
                                        <group>
                                            <field name="partner_id" options="{'no_open': True}" readonly="1"/>
                                            <field name="date_planned" readonly="1"/>
                                            <field name="warrenty_period" readonly="1"/>
                                        </group>
                                        <group>
                                            <field name="score"  />
                                            <field name="recommended" />
                                        </group>
                                    </group>
                                    <notebook>
                                        <page string="RFQ Lines">
                                            <field name="order_line" readonly="1">
                                                <tree>
                                                    <field name="currency_id" column_invisible="1"/>
                                                    <field name="product_id"/>
                                                    <field name="product_qty"/>
                                                    <field name="product_uom"/>
                                                    <field name="price_unit"/>
                                                    <field name="delivery_charge"/>
                                                    <field name="price_subtotal"/>
                                                </tree>
                                            </field>
                                            <group>
                                                <group>
                                                    <field colspan="2" name="notes" nolabel="1" readonly="1"/>
                                                </group>
                                                <group class="oe_subtotal_footer">
                                                    <field name="tax_totals" widget="account-tax-totals-field" nolabel="1" colspan="2" readonly="1"/>
                                                </group>
                                            </group>
                                        </page>
                                    </notebook>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

    <record id="supplies_rfp_action" model="ir.actions.act_window">
        <field name="name">Request For Purchases</field>
        <field name="res_model">supplies.rfp</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Request for Purchases
              </p>
        </field>
    </record>
</odoo>