<odoo>
    <data>
        <template id="portal_supplier_registration">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="card my-5">
                                <div class="card-header">
                                    <h4 class="text-center">Register As Our Supplier</h4>
                                </div>
                                 <div class="card-body">
                                    <div class="form-group my-3" >
                                        <input type="hidden" id="csrf_token" name="csrf_token" t-att-value="'${csrf_token}'"/>
                                        <div class="form-floating">
                                        <input type="email" class="form-control mb-2" id="email" placeholder="name@example.com"/>
                                        <label for="floatingInput">Company Email address</label>
                                        </div>
                                        <div class="form-floating" id="otp_input_container" style="display: none;">
                                        <input type="text" class="form-control" id="otp" placeholder="OTP"/>
                                        <label for="floatingInput">Enter The OTP</label>
                                        </div>
                                    </div>

                                    <div class="alert alert-danger" id="alert_container" style="display: none;">
                                        <strong class="d-block">Error!</strong>
                                        <span class="error_message_text" />
                                    </div>
                                    <div class="d-flex">
                                        <button class="btn btn-primary w-100" id="send_otp_btn">Send OTP</button>
                                        <button class="btn btn-primary w-100" id="verify_otp_btn" style="display: none;">Verify OTP</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>
