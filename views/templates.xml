<odoo>
    <data>
        <template id="contact-sub-form">
            <h6 t-esc="title"/>
            <div class="mb-2">
                <input type="text"
                       t-att-id="'contact-%s-name' % contact_id"
                       class="form-control"
                       placeholder="Name"
                       required=""
                />
            </div>
            <div class="mb-2">
                <input type="email"
                       t-att-id="'contact-%s-email' % contact_id"
                       class="form-control"
                       placeholder="Email"
                       required=""
                />
            </div>
            <div class="mb-2">
                <input type="tel"
                       t-att-id="'contact-%s-phone' % contact_id"
                       class="form-control"
                       placeholder="Phone"
                       required=""
                />
            </div>
            <div >
                <input type="text"
                       t-att-id="'contact-%s-address' % contact_id"
                       class="form-control"
                       placeholder="Address"
                />
            </div>
        </template>
        <template id="portal_supplier_registration">
            <t t-call="website.layout">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <div class="card my-5 d-none">
                                <div class="card-header">
                                    <h4 class="text-center">Register As Our Supplier</h4>
                                </div>
                                 <div class="card-body">
                                    <div class="form-group my-3" >
                                        <input type="hidden" id="csrf_token" name="csrf_token" t-att-value="'${csrf_token}'"/>
                                        <div class="form-floating">
                                        <input type="email" class="form-control mb-2" id="email" placeholder="name@example.com"/>
                                        <label for="floatingInput">Company Email address</label>
                                        </div>
                                        <div class="form-floating" id="otp_input_container" style="display: none;">
                                        <input type="text" class="form-control" id="otp" placeholder="OTP"/>
                                        <label for="floatingInput">Enter The OTP</label>
                                        </div>
                                    </div>

                                    <div class="alert alert-danger" id="alert_container" style="display: none;">
                                        <strong class="d-block">Error!</strong>
                                        <span class="error_message_text" />
                                    </div>
                                    <div class="d-flex">
                                        <button class="btn btn-primary w-100" id="send_otp_btn">Send OTP</button>
                                        <button class="btn btn-primary w-100" id="verify_otp_btn" style="display: none;">Verify OTP</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="card my-5">
                                <div class="card-body" id="steps_container">
                                    <div id="step_1" class="step" >
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <label class="form-label">Company Name *</label>
                                                <input name="company_name" type="text" class="form-control" required=""/>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Company Category</label>
                                                <select class="form-select">
                                                    <option value="LLC">LLC</option>
                                                    <option value="PLC">PLC</option>
                                                    <option value="Limited">Limited</option>
                                                    <option value="Partnership">Partnership</option>
                                                    <option value="Sole Proprietorship">Sole Proprietorship</option>
                                                    <option value="Others">Others</option>
                                                </select>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Logo</label>
                                                <input type="file" class="form-control"/>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Address Line 1 *</label>
                                                <input type="text" class="form-control" required=""/>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Address Line 2</label>
                                                <input type="text" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Trade License Number</label>
                                                <input type="text" class="form-control" pattern="^(?:\d{8,20}|)$"/>
                                                <div class="invalid-feedback">
                                                    Please enter a valid Trade License Number. Should be a 8 to 20 digits number.
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Tax Identification Number (TIN)</label>
                                                <input type="text" class="form-control" pattern="^(?:\d{16}|)$"/>
                                                <div class="invalid-feedback">
                                                    Please enter a valid Tax Identification Number. Should be a 16 digits number.
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <label class="form-label">Commencement Date</label>
                                                <input type="date" class="form-control"/>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Expiry Date</label>
                                                <input type="date" class="form-control"/>
                                            </div>
                                        </div>

                                        <h4 class="mt-4">Contacts</h4>
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <t t-call="bjit_supplies.contact-sub-form">
                                                    <t t-set="contact_id" t-value="1"/>
                                                    <t t-set="title">Primary Contact</t>
                                                </t>
                                            </div>
                                            <div class="col-md-4">
                                                <t t-call="bjit_supplies.contact-sub-form">
                                                    <t t-set="contact_id" t-value="2"/>
                                                    <t t-set="title">Finance Contact</t>
                                                </t>
                                            </div>
                                            <div class="col-md-4">
                                                <t t-call="bjit_supplies.contact-sub-form">
                                                    <t t-set="contact_id" t-value="3"/>
                                                    <t t-set="title">Authorized Contact</t>
                                                </t>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="step" style="display: none;" >
                                        <h3>Step 2</h3>
                                    </div>
                                    <div class="step" style="display: none;">
                                        <h3>Step 3</h3>
                                    </div>
                                    <div class="step" style="display: none;">
                                        <h3>Step 4</h3>
                                    </div>
                                    <div class="step" style="display: none;">
                                        <h3>Step 5</h3>
                                    </div>
                                    <div class="d-flex justify-content-end" id="form_action">
                                        <button id="prev_btn" class="btn btn-secondary rounded px-3 me-3" style="display: none;">Previous</button>
                                        <button id="next_btn" class="btn btn-primary rounded px-3">Next</button>
                                        <button id="submit_btn" class="btn btn-primary px-3" style="display: none;">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

    </data>
</odoo>
